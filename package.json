{
  "name": "@flightlesslabs/utils",
  "version": "0.2.0",
  "description": "A collection of reusable TypeScript utilities for everyday development.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check . ",
    "check": "eslint . && pnpm run lint",
    "check:fix": "eslint . && pnpm run format",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "docs:build": "npx typedoc",
    "docs:serve": "pnpm run docs:build && npx http-server docs",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "homepage": "https://flightlesslabs.github.io/utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flightlesslabs/utils.git"
  },
  "keywords": [
    "typescript",
    "utilities",
    "utils",
    "helpers",
    "functions",
    "time",
    "date",
    "promise",
    "timeout",
    "toolkit"
  ],
  "author": "Flightless Labs",
  "license": "ISC",
  "volta": {
    "node": "22.15.1",
    "pnpm": "10.14.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.10",
    "typedoc-material-theme": "^1.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
